<%- include('partials/header'); %>
        <div class="page-header-bg" style="background-image:url('<%= category.image %>')">
            <h2><%= title %></h2>
        </div>

        <% if(services.length > 0) { %>
        <div class="row">
        <% services.forEach((service) => { %>
            <div class="col s12 m6 l3">
                <div class="card">
                    <div class="card-image">
                        <img src="/images/service-image.jpg">
                    </div>
                    <div class="card-content">
                        <p><%= service.title %> for <%= service.price %></p>Offered by <a href="https://steemit.com/@<%= service.seller.username %>"><%= service.seller.username %></a>
                    </div>
                    <div class="card-action">
                        <a class="waves-effect waves-light btn" href="/@<%= service.seller.username %>/<%= service.slug %>">View</a>
                    </div>
                </div>
            </div>
        <% }) 
        } else { %>
            <p class="flow-text">There is no services added to this category.</p>
        <% } %>
        </div>
<%- include('partials/footer'); %>